{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
